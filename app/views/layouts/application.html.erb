<!DOCTYPE html>
<html>
  <head>
    <title>Link</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
    <nav class="navbar navbar-light bg-faded">
      <ul class="nav navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="<%= posts_path %>">Статті</a>
          <%  if current_user.try(:admin?) %>
          <li class="nav-item ">
            <%= link_to "Адмін панель", rails_admin_path, class: "nav-link" %>

            </li>
            <% end %>
            </ul>
            <%= link_to 'Нова стаття',new_post_path,class: 'btn btn-outline-primary pull-xs-right' %>
            <ul class="nav navbar-nav pull-xs-right">
              <% if user_signed_in? %>
              <li class="nav-item ">
                <%= link_to "Вихід", destroy_user_session_path, method: :delete, class: "nav-link" %>
                </li>
              <% else %>
              <li class="nav-item ">
                <%= link_to "Вхід", new_user_session_path,class: "nav navbar-nav pull-xs-right" %>
                </li>
                <li class="nav-item ">
                  <%= link_to "Реєстрація", new_user_registration_path,class: "nav navbar-nav pull-xs-right" %>
                    </li>
                     <% end %>
                  </ul>
            </nav>
            </div>

            <div class="container main">
              <div class="row">
                <div class="col-md-12">
                  <% flash.each do |name, message| %>
                  <div class="alert <%= bootstrap_class_for_(name) %>">
                    <button class="close" data-dismiss="alert">&times;</button>
                  <%= message %>
                  </div>
                  <% end %>
                  </div>
                   </div>

                  <div class="row">
                    <div class="col-md-9">
              <%= yield %>
        </div>
        <div class="col-md-3">
          <% tag_cloud(Tag.counts, %w{tag1 tag2 tag3 tag4 tag5}) do |tag, css_class| %>
          <%= link_to tag.name, tag_path(tag.name), class: css_class %>
          <% end %>
      </div>
    </div>

  </body>
</html>
